        <result property="tushumingcheng" column="tushumingcheng"/>
        <result property="tushufenlei" column="tushufenlei"/>
        <result property="tushuzuozhe" column="tushuzuozhe"/>
        <result property="guihaizhuangtai" column="guihaizhuangtai"/>
        <result property="shuliang" column="shuliang"/>
        <result property="jieyueshijian" column="jieyueshijian"/>
        <result property="guihaishijian" column="guihaishijian"/>
